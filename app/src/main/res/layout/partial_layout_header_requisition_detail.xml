<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_20"
    android:layout_marginVertical="@dimen/dp_20"
    android:elevation="@dimen/dp_8"
    app:cardBackgroundColor="@color/grey_200"
    card_view:cardCornerRadius="@dimen/dp_8"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvslNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/grey_200"
            android:gravity="center_vertical|start"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvmaterialCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.07"
            tools:background="@color/grey_200" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvmaterialCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/grey_200"
            android:gravity="center_vertical|start"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvmaterialName"
            app:layout_constraintStart_toEndOf="@+id/tvslNo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33"
            tools:background="@color/red_200" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvmaterialName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/grey_200"
            android:gravity="center_vertical|start"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvquantity"
            app:layout_constraintStart_toEndOf="@+id/tvmaterialCode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45"
            tools:background="@color/blue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvquantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/grey_200"
            android:gravity="center_vertical|end"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvmaterialName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.15"
            tools:background="@color/red_200" />


        <View
            android:id="@+id/view_click"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>