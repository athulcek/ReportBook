<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ouvrirdeveloper.basearc">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.ouvrirdeveloper.reportbook.application.App"
        android:allowBackup="false"
        android:extractNativeLibs="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:node="merge"
        tools:replace="android:label">
        <activity
            android:name="com.ouvrirdeveloper.reportbook.features.splash.SplashScreenActivity"
            android:launchMode="singleTask"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ouvrirdeveloper.reportbook.features.splash.LandingPageActivity" />
        <activity android:name="com.ouvrirdeveloper.reportbook.features.signin.SignInActivity" />
        <activity android:name=".features.home.HomeActivity" />
    </application>

</manifest>