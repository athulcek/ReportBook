<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/parentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginVertical="@dimen/dp_5"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:clickable="false"
            android:focusable="false">

            <View
                android:id="@+id/viewBg"
                android:layout_width="@dimen/count_circle"
                android:layout_height="@dimen/count_circle"
                android:layout_marginVertical="@dimen/dp_15"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/primaryColor"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toTopOf="@+id/tvTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_2"
                android:layout_marginVertical="@dimen/margin_8"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:lines="1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:theme="@style/Theme.MyApp"
                app:cornerRadius="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="@+id/viewBg"
                app:layout_constraintEnd_toEndOf="@+id/viewBg"
                app:layout_constraintStart_toStartOf="@+id/viewBg"
                app:layout_constraintTop_toTopOf="@+id/viewBg"
                tools:text="113" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginVertical="@dimen/dp_5"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_8"
                android:textAllCaps="false"
                android:textColor="@color/primaryDarkColor"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewBg"
                tools:text="@string/site_material_receipt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>