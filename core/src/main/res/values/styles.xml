<?xml version="1.0" encoding="utf-8"?>


<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="colorControlNormal">@color/hint_gray</item>
        <item name="colorControlActivated">@color/hint_gray</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlHighlight">@color/hint_gray</item>

    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hint_gray</item>
        <item name="android:textSize">@dimen/font_normal_size_14</item>
    </style>

    <style name="AppEditTextViewStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="background">@color/hint_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColorHighlight">@color/hint_gray</item>
        <item name="android:textSize">@dimen/font_normal_size_18</item>
    </style>

    <style name="AppEditTextStyle" parent="AppEditTextViewStyle">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
        <item name="android:textSize">@dimen/font_normal_size_16</item>
        <item name="colorControlNormal">@color/hint_gray</item>
        <item name="backgroundTint">@color/divider_color</item>
        <item name="colorControlActivated">@color/hint_gray</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/secondaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>

</resources>
